<script type="text/javascript">
    ///退出
    function ExitLogin() {
        layer.confirm('确认退出吗？', function (index) {
            var time = (Math.random() * 1000) + 100;
            var url = "/Login/Exit?time=" + time;
            $.post(url, {}, function (response) {
                layer.msg('正在退出系统请稍后...', {
                    icon: 16, shade: 0.5
                });
                window.location = "/Login/Index";
            });
        });
    }
</script>


